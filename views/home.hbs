{{! Doctor Finder Home Page }}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MediConnect - Find Doctors</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    {{> navbar}}

    <main class="doctor-main">
        <search class="search-bar">
            <input type="text" placeholder="Search for doctors, specialties, or conditions" /><br>
            <button type="submit"><span>Search</span></button>
            </search>
        
        <div class="filter-chips">
            <button>Specialty</button>
            <button>Location</button>
            <button>Insurance</button>
            <button>Availability</button>
        </div>
        
         <h2 class="section-title">Doctors near you</h2>
       {{!-- filepath: /Users/prateekyadav/Coding Blocks PS2/MediConnect/views/home.hbs --}}
<div class="doctor-list">
  {{#each doctors}}
    <a href="/doctor/{{this._id}}" class="doctor-card-link">
      <div class="doctor-card">
        <div class="doctor-info">
          <div class="doctor-name">{{this.name}}</div>
          <div class="doctor-desc">{{this.specialty}} | Experience: {{this.experience}} yrs</div>
        </div>
        <img class="doctor-img" src="{{this.image}}" alt="{{this.name}}">
      </div>
    </a>
  {{/each}}
</div>
    </main>
</body>
</html>